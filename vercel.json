{
  "buildCommand": "npm run build",
  "outputDirectory": "out",
  "framework": "nextjs",
  "rewrites": [
    {
      "source": "/feed.xml",
      "destination": "/api/feed"
    },
    {
      "source": "/sitemap.xml", 
      "destination": "/api/sitemap"
    }
  ],
  "headers": [
    {
      "source": "/feed.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/rss+xml"
        }
      ]
    },
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type", 
          "value": "application/xml"
        }
      ]
    }
  ]
}